{
	// General Settings
	"atomKeymap.promptV3Features": true,
	"debug.console.fontSize": 16,
	"window.zoomLevel": -0.5,
	"window.openFoldersInNewWindow": "on",
	"workbench.startupEditor": "none",

	// Editor Settings
	"editor.bracketPairColorization.enabled": true,
	"editor.codeActionsOnSave": ["source.fixAll.eslint"],
	"editor.cursorBlinking": "smooth",
	"editor.fontFamily": "\"Fira Code\", Menlo, Monaco, ‘Courier New’, monospace",
	"editor.fontLigatures": true,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"editor.inlineSuggest.enabled": true,
	"editor.lineNumbers": "relative",
	"editor.minimap.enabled": false,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.showFoldingControls": "always",
	"editor.suggest.snippetsPreventQuickSuggestions": false,
	"editor.suggestFontSize": 16,
	"editor.suggestSelection": "first",
	"editor.tabSize": 2,
	"editor.unicodeHighlight.invisibleCharacters": false,

	// File Management
	"files.associations": {
		"*.jsx": "typescriptreact",
		"*.purs": "purescript",
		"*.module": "php"
	},
	"files.trimTrailingWhitespace": true,
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true
	},

	// Git Settings
	"git.autofetch": true,
	"git.experimental.mergeEditor": true,
	"git.confirmSync": false,
	"gitlens.currentLine.scrollable": false,
	"gitlens.views.worktrees.files.layout": "list",

	// GitHub Copilot Settings
	"github.copilot.enable": {
		"*": true,
		"plaintext": true,
		"markdown": true,
		"scminput": false,
		"yaml": true,
		"haskell": false,
		"typescript": true,
		"ini": true,
		"rust": true
	},
	"githubPullRequests.pullBranch": "never",
	"github.copilot.editor.enableAutoCompletions": true,

	// Emmet Settings
	"emmet.includeLanguages": { "twig": "html", "haskell": "html" },
	"emmet.syntaxProfiles": { "javascript": "jsx", "typescript": "tsx" },

	// Haskell Settings
	"haskell.formattingProvider": "stylish-haskell",

	// Terminal Settings
	"terminal.integrated.commandsToSkipShell": ["language-julia.interrupt"],
	"terminal.integrated.env.osx": {
		"FIG_NEW_SESSION": "1"
	},
	"terminal.integrated.fontSize": 16,

	// Todo Highlight Settings
	"todohighlight.keywords": [
		{
			"text": "NOTE:",
			"color": "#FF8000",
			"border": "1px solid #FF8000",
			"borderRadius": "2px",
			"backgroundColor": "#F5D0A9"
		},
		{
			"text": "TODO:",
			"color": "red",
			"border": "1px solid red",
			"borderRadius": "2px",
			"backgroundColor": "rgba(0,0,0,.2)"
		},
		{
			"text": "PENDING:",
			"color": "#00FFFF",
			"border": "1px solid #00FFFF",
			"borderRadius": "2px",
			"backgroundColor": "rgba(0,0,0,.2)"
		},
		{
			"text": "DEPRECATED:",
			"color": "#D358F7",
			"border": "1px solid #D358F7",
			"borderRadius": "2px",
			"backgroundColor": "rgba(0,0,0,.2)"
		},
		{
			"text": "QUESTION:",
			"color": "#3ADF00",
			"border": "1px solid #3ADF00",
			"borderRadius": "2px",
			"backgroundColor": "#E0F8E0"
		}
	],

	// Vim Settings
	"vim.easymotion": true,
	"vim.foldfix": true,
	"vim.hlsearch": true,
	"vim.insertModeKeyBindings": [{ "before": ["j", "j"], "after": ["<Esc>"] }],
	"vim.leader": "space",
	"vim.replaceWithRegister": true,
	"vim.smartRelativeLine": true,
	"vim.sneak": true,
	"vim.useSystemClipboard": true,
	"vim.visualstar": true,
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["leader", "k"],
			"after": ["leader", "leader", "k"]
		},
		{
			"before": ["leader", "j"],
			"after": ["leader", "leader", "j"]
		},
		{
			"before": ["s"],
			"after": ["leader", "leader", "s"]
		}
	],
	"vim.easymotionKeys": "qwertasdfgzxcvbuiopyhjklnm,;",
	"vim.normalModeKeyBindings": [
		{
			"before": ["C-w", "v"],
			"after": [":", "v", "s", "<Enter>"]
		},
		{
			"before": ["C-w", "s"],
			"after": [":", "s", "p", "<Enter>"]
		}
	],

	// Workbench Settings
	"workbench.colorCustomizations": {
		"statusBar.background": "#005f5f",
		"statusBar.noFolderBackground": "#005f5f",
		"statusBar.debuggingBackground": "#005f5f"
	},
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.wrapTabs": true,
	"workbench.editor.splitSizing": "distribute",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.localHistory.enabled": false,
	"workbench.sideBar.location": "left",

	// Language-Specific Settings
	"[haskell]": { "editor.defaultFormatter": "haskell.haskell" },
	"[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[php]": { "editor.defaultFormatter": "bmewburn.vscode-intelephense-client" },
	"[purescript]": { "editor.defaultFormatter": "nwolverson.ide-purescript" },
	"purescript.formatter": "purs-tidy",
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},

	// Additional Language Settings
	"deno.path": "/nix/store/6xvnjz2grdah9kawh9qcf2d6gh0pda23-deno-1.16.2/bin/deno",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"prettier.useTabs": true,
	"rust.checkOnSave": true,
	"rust.formatOnSave": true,
	"typescript.referencesCodeLens.enabled": true,
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"totalTypeScript.hideAllTips": true,
	"julia.symbolCacheDownload": true,
	"editor.accessibilitySupport": "off",
	"julia.enableTelemetry": true,

	// Miscellaneous Settings
	"diffEditor.ignoreTrimWhitespace": false,
	"importCost.timeout": 700,
	"errorLens.delay": 1000,
	"diffEditor.experimental.showMoves": true,
	"security.promptForLocalFileProtocolHandling": false,
	"typescript.preferences.importModuleSpecifier": "relative",
	"workbench.colorTheme": "One Dark Pro",
	"remoteHub.search.download.enabled": true,
	"tabnine.experimentalAutoImports": true,
	"hadolint.hadolintPath": "/nix/store/qxng2a025jiv5qran4z7bfc7qwvdnc6l-hadolint",
	"[python]": {
		"diffEditor.ignoreTrimWhitespace": true
	},
	"workbench.layoutControl.enabled": false,
	"window.commandCenter": false,
	"window.title": "${activeFolderMedium}${separator}${rootName}",
	"intelephense.environment.phpVersion": "8.1.0",
	"twig-language-2.braceLine": true,
	"twig-language-2.bracePadding": true,
	"twig-language-2.braces": true,
	"twig-language-2.braceStyle": "collapse",
	"twig-language-2.commentLine": true,
	"twig-language-2.comments": true,
	"twig-language-2.compressedCss": true,
	"twig-language-2.correct": true,
	"twig-language-2.cssInsertLines": true,
	"twig-language-2.elseLine": true,
	"nix.enableLanguageServer": true,
	"nix.formatterPath": "nixfmt",
	"notebook.editorOptionsCustomizations": {
		"editor.tabSize": 4,
		"editor.indentSize": 4,
		"editor.insertSpaces": true
	},
	"editor.inlayHints.enabled": "offUnlessPressed",
	"[dockerfile]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},
	"haskell.manageHLS": "PATH",
	"cline.preferredLanguage": "Japanese - 日本語",
	"roo-cline.allowedCommands": [
		"npm test",
		"npm install",
		"tsc",
		"git log",
		"git diff",
		"git show"
	],

	// Cursor Settings
	"cursor.cpp.disabledLanguages": ["scminput", "haskell"],
	"cursor.diffs.useCharacterLevelDiffs": true,
	"cursor.terminal.usePreviewBox": true
}
