{
	"title": "Vi Style Arrows Pushing Simultaneously",
	"rules": [
		{
			"description": "Change Control + h/j/k/l to Arrows",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "h",
						"modifiers": {
							"mandatory": ["control"],
							"optional": ["caps_lock", "shift", "command", "control", "fn"]
						}
					},
					"to": [
						{
							"key_code": "left_arrow"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "j",
						"modifiers": {
							"mandatory": ["control"],
							"optional": ["caps_lock", "shift", "command", "control", "fn"]
						}
					},
					"to": [
						{
							"key_code": "down_arrow"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "k",
						"modifiers": {
							"mandatory": ["control"],
							"optional": ["caps_lock", "shift", "command", "control", "fn"]
						}
					},
					"to": [
						{
							"key_code": "up_arrow"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "l",
						"modifiers": {
							"mandatory": ["control"],
							"optional": ["caps_lock", "shift", "command", "control", "fn"]
						}
					},
					"to": [
						{
							"key_code": "right_arrow"
						}
					]
				}
			]
		}
	]
}
